{
  "name": "cli-nodejs-bindec",
  "version": "1.0.0",
  "description": "A CLI application that converts binary numbers to decimal numbers (vice versa).",
  "main": "index.js",
  "author": "Kent Louise Tonino",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --build && node ./dist/app.js",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test:all": "jest --watchAll --verbose --coverage --runInBand --no-cache"
  },
  "bin": {
    "cli-bindec": "./dist/app.js"
  },
  "dependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "jest": "^29.7.0",
    "npm-ioservice": "^1.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/coverage/"
    ]
  }
}
